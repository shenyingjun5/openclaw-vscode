                }
            } else if (att.type === 'reference') {
                icon = 'üìÑ';
            }
            
            return `
                <div class="attachment-item" data-index="${idx}">
                    ${preview || `<span>${icon}</span>`}
                    <span class="name">${escapeHtml(att.name)}</span>
                    <span class="remove" onclick="window.removeAttachment(${idx})">‚úï</span>
