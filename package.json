{
  "name": "openclaw",
  "displayName": "%extension.displayName%",
  "description": "%extension.description%",
  "version": "0.2.3",
  "publisher": "shenyingjun5",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/shenyingjun5/openclaw-vscode"
  },
  "homepage": "https://github.com/shenyingjun5/openclaw-vscode#readme",
  "bugs": {
    "url": "https://github.com/shenyingjun5/openclaw-vscode/issues"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Machine Learning",
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "keywords": [
    "ai",
    "assistant",
    "openclaw",
    "chat",
    "copilot",
    "code assistant",
    "ai coding"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "icon": "media/icon.png",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "openclaw",
          "title": "OpenClaw",
          "icon": "media/chat.svg"
        }
      ]
    },
    "views": {
      "openclaw": [
        {
          "type": "webview",
          "id": "openclaw.chatView",
          "name": "Chat"
        }
      ]
    },
    "commands": [
      {
        "command": "openclaw.openChatPanel",
        "title": "%command.openChatPanel.title%",
        "icon": {
          "light": "media/chat-light.svg",
          "dark": "media/chat-dark.svg"
        }
      },
      {
        "command": "openclaw.sendSelection",
        "title": "%command.sendSelection.title%"
      },
      {
        "command": "openclaw.sendFile",
        "title": "%command.sendFile.title%"
      },
      {
        "command": "openclaw.togglePlanMode",
        "title": "%command.togglePlanMode.title%"
      },
      {
        "command": "openclaw.newSession",
        "title": "%command.newSession.title%"
      },
      {
        "command": "openclaw.clearChat",
        "title": "%command.clearChat.title%"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "openclaw.openChatPanel",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "openclaw.sendSelection",
          "when": "editorHasSelection",
          "group": "openclaw@1"
        },
        {
          "command": "openclaw.sendFile",
          "group": "openclaw@2"
        }
      ]
    },
    "configuration": {
      "title": "%config.title%",
      "properties": {
        "openclaw.gatewayUrl": {
          "type": "string",
          "default": "http://127.0.0.1:18789",
          "description": "%config.gatewayUrl.description%"
        },
        "openclaw.openclawPath": {
          "type": "string",
          "default": "",
          "description": "%config.openclawPath.description%"
        },
        "openclaw.defaultSession": {
          "type": "string",
          "default": "main",
          "description": "%config.defaultSession.description%"
        },
        "openclaw.planMode": {
          "type": "boolean",
          "default": false,
          "description": "%config.planMode.description%"
        },
        "openclaw.aiOutputLanguage": {
          "type": "string",
          "enum": [
            "auto",
            "zh-CN",
            "en",
            "ja",
            "ko"
          ],
          "enumDescriptions": [
            "%config.aiOutputLanguage.enum.auto%",
            "%config.aiOutputLanguage.enum.zh-CN%",
            "%config.aiOutputLanguage.enum.en%",
            "%config.aiOutputLanguage.enum.ja%",
            "%config.aiOutputLanguage.enum.ko%"
          ],
          "default": "auto",
          "description": "%config.aiOutputLanguage.description%"
        },
        "openclaw.autoRefreshInterval": {
          "type": "number",
          "default": 10000,
          "minimum": 0,
          "description": "%config.autoRefreshInterval.description%",
          "markdownDescription": "%config.autoRefreshInterval.markdownDescription%"
        },
        "openclaw.enableCliFallback": {
          "type": "boolean",
          "default": true,
          "description": "%config.enableCliFallback.description%"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@types/ws": "^8.18.1",
    "@vscode/vsce": "^2.22.0",
    "canvas": "^3.2.1",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "js-yaml": "^4.1.1",
    "ws": "^8.19.0"
  }
}